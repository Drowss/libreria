<style>
    body {
        background-color: #FFFcf0;
        color: #171F1E;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #4E6161;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        max-width: 1200px;
        margin: 25px;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #4E6161;
        border-color: #4E6161;
    }

    .btn-primary:hover {
        background-color: #3A4B4B;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .table th {
        background-color: #4E6161;
        color: #FFFcf0;
        padding: 10px;
        text-align: left;
    }

    .table td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.4);
    }

    #modalToggle:checked + .modal {
        display: block;
    }

    .modal-content {
        background-color: #FFFcf0;
        margin: 10% auto;
        padding: 20px;
        border: 1px solid #4E6161;
        width: 50%;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .close {
        float: right;
        font-size: 28px;
        font-weight: bold;
        text-decoration: none;
        color: #4E6161;
    }

    .close:hover {
        color: #171F1E;
    }

    #modalToggle {
        display: none;
    }

    .modal-content form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .modal-content label {
        font-weight: bold;
        text-align: left;
    }

    .modal-content input {
        padding: 8px;
        border: 1px solid #4E6161;
        border-radius: 5px;
    }
</style>

@page "/libros"
@attribute [StreamRendering]

<PageTitle>Libros</PageTitle>

<div class="container">
    <h1>Gestión de Libros</h1>
    <p>Este componente muestra una lista de libros.</p>
    <label for="modalToggle" class="btn btn-primary mb-3">Agregar Libro</label>
    <input type="checkbox" id="modalToggle">

    <div class="modal">
        <div class="modal-content">
            <label for="modalToggle" class="close">&times;</label>
            <h2>Agregar Libro</h2>
            <form>
                <label for="codigo">Código:</label>
                <input type="text" id="codigo" name="codigo" required>

                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" required>

                <label for="autor">Autor:</label>
                <input type="text" id="autor" name="autor" required>

                <label for="genero">Género:</label>
                <input type="text" id="genero" name="genero" required>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>

    @if (libros == null)
    {
        <p><em>Cargando...</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Género</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var libro in libros)
                {
                    <tr>
                        <td>@libro.Codigo</td>
                        <td>@libro.Titulo</td>
                        <td>@libro.Autor</td>
                        <td>@libro.Genero</td>
                        <td>
                            <button class="btn btn-primary btn-sm">Editar</button>
                            <button class="btn btn-primary btn-sm">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private Libro[]? libros;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500); // Simulación de carga asíncrona

        libros = new[]
        {
            new Libro { Codigo = 1, Titulo = "Cien años de soledad", Autor = "Gabriel García Márquez", Genero = "Realismo mágico" },
            new Libro { Codigo = 2, Titulo = "El principito", Autor = "Antoine de Saint-Exupéry", Genero = "Fábula" },
            new Libro { Codigo = 3, Titulo = "1984", Autor = "George Orwell", Genero = "Distopía" },
        };
    }

    private class Libro
    {
        public int Codigo { get; set; }
        public string Titulo { get; set; } = string.Empty;
        public string Autor { get; set; } = string.Empty;
        public string Genero { get; set; } = string.Empty;
    }
}
