@page "/"

<PageTitle>Inicio - Librería</PageTitle>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS (requiere Popper.js) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid p-0">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #171F1E;">
        <div class="container">
            <a class="navbar-brand" href="#">Librería</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#libros">Libros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contacto</a>
                    </li>
                    <li class="nav-item">
                        <!-- Botón de Inicio de Sesión -->
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownLogin" data-bs-toggle="dropdown" aria-expanded="false">
                                Iniciar Sesión
                            </button>
                            <div class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="dropdownLogin" style="min-width: 250px;">
                                <form>
                                    <div class="mb-3">
                                        <label for="cedula" class="form-label">Cédula</label>
                                        <input type="text" class="form-control" id="cedula" placeholder="Ingresa tu cédula">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Contraseña</label>
                                        <input type="password" class="form-control" id="password" placeholder="Ingresa tu contraseña">
                                    </div>
                                    <button type="submit" class="btn w-100" style="background-color: #4E6161; color: #FFFCF0;">Ingresar</button>
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="bg-light py-5" style="background-color: #4E6161; color: #FFFCF0;">
        <div class="container text-center">
            <h1 class="display-4">Bienvenido a la Librería</h1>
            <p class="lead">Explora nuestra colección de libros y disfruta de la lectura.</p>
            <a href="#libros" class="btn btn-lg text-white" style="background-color: #171F1E;">Ver Libros</a>
        </div>
    </header>

    <!-- Sección de Libros -->
    <section id="libros" class="py-5" style="background-color: #FFFCF0; color: #171F1E;">
        <div class="container">
            <h2 class="text-center mb-5">Nuestra Colección</h2>
            <div class="row">
                <!-- Libro 1 -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://m.media-amazon.com/images/I/71aFt4+OTOL._AC_UF1000,1000_QL80_.jpg" class="card-img-top" alt="El Gran Gatsby">
                        <div class="card-body">
                            <h5 class="card-title">El Gran Gatsby</h5>
                            <p class="card-text">F. Scott Fitzgerald</p>
                            <p class="card-text">Una historia de amor, ambición y decadencia en los años 20.</p>
                        </div>
                    </div>
                </div>
                <!-- Libro 2 -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://m.media-amazon.com/images/I/81af+MCATTL._AC_UF1000,1000_QL80_.jpg" class="card-img-top" alt="Cien Años de Soledad">
                        <div class="card-body">
                            <h5 class="card-title">Cien Años de Soledad</h5>
                            <p class="card-text">Gabriel García Márquez</p>
                            <p class="card-text">La saga de la familia Buendía en el mágico pueblo de Macondo.</p>
                        </div>
                    </div>
                </div>
                <!-- Libro 3 -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://m.media-amazon.com/images/I/81dQwQlmAXL._AC_UF1000,1000_QL80_.jpg" class="card-img-top" alt="1984">
                        <div class="card-body">
                            <h5 class="card-title">1984</h5>
                            <p class="card-text">George Orwell</p>
                            <p class="card-text">Una distopía sobre vigilancia y control totalitario.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-4" style="background-color: #171F1E; color: #FFFCF0;">
        <div class="container text-center">
            <p class="mb-0">&copy; 2023 Librería. Todos los derechos reservados.</p>
        </div>
    </footer>
</div>